
@model  IEnumerable<TP1_.NET.Models.Movie>

<h2>Index</h2>


@Html.ActionLink("Nouveau Film","Ajouter")

<table class="table">
    <thead  class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(x => x.Title)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(x => x.ReleaseDate)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(x => x.Genre)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(x => x.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr scope="row">
                <td>
                    @Html.DisplayFor(x => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(x => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Modifier","Modifier",new { id = item.ID })|
                    @Html.ActionLink("Supprimer", "Supprimer", new { id = item.ID })|
                    @Html.ActionLink("Détail","Detail",new { id = item.ID })|
                </td>


            </tr>
        }

    </tbody>
</table>
