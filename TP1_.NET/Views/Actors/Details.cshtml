@model TP1_.NET.Models.Actor

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

    </dl>

</div>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Release Date</th>
            <th>Role</th>
            <th>Diracteur</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Participates)
        {
            <tr>@Html.DisplayFor(x => item.Movie.Title)</tr>
            <tr>@Html.DisplayFor(x => item.Movie.Genre)</tr>
            <tr>@Html.DisplayFor(x => item.Movie.ReleaseDate)</tr>
            <tr>@Html.DisplayFor(x => item.Role)</tr>

            <tr>@Html.DisplayFor(x => item.Movie.Director.FirstName) @Html.DisplayFor(x => item.Movie.Director.LastName)</tr>
        }
    </tbody>
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ActorID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
